<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password hash</th>
      <th>Favourite color</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password_hash %></td>
        <td><%= user.favourite_color %></td>
        <td><%= user.admin? %></td>
        <td><%= link_to 'Edit', "/admin/edit/#{user.id}" %></td>
        <% unless @logged_in_as == user %>
        <td><%= link_to 'Destroy', "/admin/destroy/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
